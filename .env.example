# Copy to .env and adjust if needed. Docker Compose auto-loads it.

# Build-time toggles
MYWI_WITH_ML=0
MYWI_WITH_PLAYWRIGHT_BROWSERS=0

# Runtime settings
TZ=UTC
# Host folder for data and exports (left side of volume mapping).
# Defaults to ./data inside the repo. Change to an absolute path if you prefer.
# macOS/Linux example:
# HOST_DATA_DIR=/Users/you/mywi_data
# Windows example (use forward slashes or quote):
# HOST_DATA_DIR=C:/Users/you/mywi_data
HOST_DATA_DIR=./data
# Override data dir inside container (default: /app/data)
#MYWI_DATA_DIR=/app/data

# Embedding providers/API keys (optional; configure in settings.py or via env if integrated)
#OPENAI_API_KEY=
#MISTRAL_API_KEY=
